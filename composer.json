{
    "name": "folded/session",
    "description": "Session manipulation utlilities for your web app.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Khalyomede",
            "email": "khalyomede@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4.0",
        "folded/exception": "0.3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "pestphp/pest": "0.3.*",
        "friendsofphp/php-cs-fixer": "2.*"
    },
    "autoload": {
        "psr-4": {
            "Folded\\": "src"
        },
        "files": [
            "src/flashSession.php",
            "src/getSession.php",
            "src/hasSession.php",
            "src/removeSession.php",
            "src/setSession.php"
        ]
    },
    "scripts": {
        "test": "pest --coverage",
        "lint": "php-cs-fixer --allow-risky=yes fix"
    }
}
